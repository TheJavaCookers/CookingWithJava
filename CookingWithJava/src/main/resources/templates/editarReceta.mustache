<body>
<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<!-- Header section -->
{{{headerHTML}}}
<!-- Header section end -->


<!-- Hero section -->
<section class="page-top-section set-bg" data-setbg="img/page-top-bg.jpg">
    <div class="container">
        <h2>Crear nueva receta</h2>
    </div>
</section>
<!-- Hero section end -->

<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-form-warp">
                    <h4>Editando una receta.</h4>
                    <form class="contact-form" action="formulario-editar-receta" method="post"
                          enctype="multipart/form-data">
                        <input type="hidden" name="_csrf" value="{{token}}"/>
                        <input type="hidden" name="recetaId" value="{{receta.id}}"/>
                        <div>
                            <div class="form-group row">
                                <label class="col-sm-3" for="nombreDeLaReceta">Nombre de la receta</label>
                                <input class="col-sm-9" id="nombreDeLaReceta" name="nombreDeLaReceta" type="text"
                                       placeholder="Nombre de la receta" value="{{receta.nombre_receta}}">
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3" for="tipoDePlato">Tipo de plato</label>
                                <input class="col-sm-9" id="tipoDePlato" name="tipoDePlato" type="text"
                                       placeholder="Tipo de plato" value="{{tipoDePlato}}">
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3" for="nivelDificultadReceta">Nivel de dificultad</label>
                                <select class="col-sm-9" id="nivelDificultadReceta" name="nivelDificultadReceta">
                                    <option value="Indefinido">Indefinido</option>
                                    <option value="Facil">Facil</option>
                                    <option value="Medio">Medio</option>
                                    <option value="Dificil">Dificil</option>
                                    <option value="Experto">Experto</option>
                                    <option value="Profesional">Profesional</option>
                                </select>
                            </div>
                            <h5 class="form-group row col-md-12">Ingredientes:</h5>
                            <button type="submit" class="form-group row col-md-12 site-btn">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Gallery section -->
<div class="gallery">
    <div class="gallery-slider owl-carousel">
        <div class="gs-item set-bg" data-setbg="img/low-bar/1.jpg"></div>
        <div class="gs-item set-bg" data-setbg="img/low-bar/2.jpg"></div>
