<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-form-warp">
                    <h4>Crear una nueva receta.</h4>
                    <form class="contact-form" action="formulario-crear-receta" method="post" enctype="multipart/form-data">
                        <div>
                            <div class="form-group row">
                                <label class="col-sm-3" for="nombreDeLaReceta">Nombre de la receta</label>
                                <input class="col-sm-9" id="nombreDeLaReceta" name="nombreDeLaReceta" type="text"
                                       placeholder="Nombre de la receta">
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3" for="tipoDePlato">Tipo de plato</label>
                                <input class="col-sm-9" id="tipoDePlato" name="tipoDePlato" type="text"
                                       placeholder="Tipo de plato">
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3" for="nivelDificultadReceta">Nivel de dificultad</label>
                                <select class="col-sm-9" id="nivelDificultadReceta" name="nivelDificultadReceta">
                                    <option value="Indefinido">Indefinido</option>
                                    <option value="Facil">Facil</option>
                                    <option value="Medio">Medio</option>
                                    <option value="Dificil">Dificil</option>
                                    <option value="Experto">Experto</option>
                                    <option value="Profesional">Profesional</option>
                                </select>
                            </div>
                            <div class="form-group row col-md-12">
                                <label class="col-sm-3" for="imagenReceta">Imagen de Receta:</label>
                                <input class="col-sm-9" id="imagenReceta" name="imagenReceta"
                                       type="file" accept="image/png, image/jpeg">
                            </div>
                            <h5 class="form-group row col-md-12">Ingredientes:</h5>
                            <div id="ingredientes">
                                <div class="form-group" id="ingrediente-1Group">
                                    <h6 class="form-group row col-md-12">Ingrediente 1:</h6>
                                    <div class="form-group row">
                                        <label class="col-sm-3" for="ingrediente-1Name">Ingrediente 1: Nombre</label>
                                        <input class="col-sm-9" id="ingrediente-1Name" name="ingrediente-1Name"
                                               type="text"
                                               placeholder="Nombre Ingrediente 1">
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3" for="ingrediente-1Cantidad">Ingrediente 1:
                                            Cantidad</label>
                                        <input class="col-sm-9" id="ingrediente-1Cantidad" name="ingrediente-1Cantidad"
                                               type="text"
                                               placeholder="Cantidad Ingrediente 1">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <button class="site-btn col-md-12" type="button" id="buttonIngrediente">Añadir
                                    ingrediente
                                </button>
                                <button class="site-btn col-md-12" type="button" id="buttonQuitarIngrediente">Quitar
                                    ingrediente
                                </button>
                            </div>
                            <h5 class="form-group row col-md-12">Utensilios:</h5>
                            <div id="utensilios">
                                <div class="form-group" id="utensilio-1Group">
                                    <h6 class="form-group row col-md-12">Utensilio 1:</h6>
                                    <div class="form-group row">
                                        <label class="col-sm-3" for="utensilio-1Name">Utensilio 1: Nombre</label>
                                        <input class="col-sm-9" id="utensilio-1Name" name="utensilio-1Name"
                                               type="text"
                                               placeholder="Nombre Utensilio 1">
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3" for="utensilio-1Nivel">Utensilio 1:
                                            Nivel de dificultad</label>
                                        <select class="col-sm-9" id="utensilio-1Nivel" name="utensilio-1Nivel">
                                            <option value="Indefinido">Indefinido</option>
                                            <option value="Facil">Facil</option>
                                            <option value="Medio">Medio</option>
                                            <option value="Dificil">Dificil</option>
                                            <option value="Experto">Experto</option>
                                            <option value="Profesional">Profesional</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <button class="site-btn col-md-12" type="button" id="buttonUtensilio">Añadir
                                    utensilio
                                </button>
                                <button class="site-btn col-md-12" type="button" id="buttonQuitarUtensilio">Quitar
                                    utensilio
                                </button>
                            </div>
                            <div id="pasos">
                                <div class="form-group" id="paso-1Group">
                                    <h6 class="form-group row col-md-12">Paso 1:</h6>
                                    <div class="form-group row">
                                        <label class="col-sm-3" for="paso-1Descripcion">Paso 1: Nombre</label>
                                        <textarea class="col-sm-9" id="paso-1Descripcion" name="paso-1Descripcion"
                                                  type="text" placeholder="Descripcion Paso 1"></textarea>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3" for="paso-1Duracion">Paso 1:
                                            Duración</label>
                                        <input class="col-sm-9" id="paso-1Duracion" name="paso-1Duracion"
                                               type="number" placeholder="Duracion Paso 1">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <button class="site-btn col-md-12" type="button" id="buttonPaso">Añadir
                                    paso
                                </button>
                                <button class="site-btn col-md-12" type="button" id="buttonQuitarPaso">Quitar
                                    paso
                                </button>
                            </div>
                            <input type="hidden" name="numPasos" id="numPasos" value="1" />
                            <input type="hidden" name="numIngredientes" id="numIngredientes" value="1" />
                            <input type="hidden" name="numUtensilios" id="numUtensilios" value="1" />
                            <button type="submit" class="form-group row col-md-12 site-btn">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
